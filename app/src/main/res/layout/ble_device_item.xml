<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:background="?selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <TextView
        tools:text="bluetooth name"
        android:id="@+id/txt_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/txt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        tools:text="bluetooth address"
        android:id="@+id/txt_address"
        app:layout_constraintTop_toBottomOf="@id/txt_name"
        app:layout_constraintBottom_toTopOf="@id/txt_signal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        tools:text="bluetooth signal"
        android:id="@+id/txt_signal"
        app:layout_constraintTop_toBottomOf="@id/txt_address"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>